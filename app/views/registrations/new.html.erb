<h1>Sign up</h1>
<%= form_with model: @user do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %> </div>
      <% end %>
      </div>
    <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "John Smith" %>
    <small id="Username" class="form-text text-muted">What's your name?.</small>
  </div>
  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", placeholder: "johnsmit" %>
    <small id="Username" class="form-text text-muted">Pick now your awesome unique username.</small>
  </div>
  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, class: "form-control" %>
    <small id="Username" class="form-text text-muted">Upload a picture that everybody can love.</small>
  </div>
  <div class="form-group">
    <%= form.label :bio %>
    <%= form.text_area :bio , class: "form-control", placeholder: "An awesome guy with Mr. smith hobbies" %>
    <small id="Username" class="form-text text-muted">Tell us more about yourself.</small>
  </div>
  <div class="form-group">
    <%= form.label :twitter %>
    <%= form.text_field :twitter , class: "form-control", placeholder: "https://twitter.com/JohnSmith14" %>
  </div>
  <div class="form-group">
    <%= form.label :facebook %>
    <%= form.text_field :facebook , class: "form-control", placeholder: "https://www.facebook.com/JohnSmith14" %>
  </div>
  <div class="form-group">
    <%= form.label :instagram %>
    <%= form.text_field :instagram , class: "form-control", placeholder: "https://www.instagram.com/daorejuela1/" %>
  </div>
  <%= form.submit "Create", class: "btn btn-primary" %>
<% end %>
